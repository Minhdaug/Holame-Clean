@using WebBanHangOnline.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Holame Clean - Tiên phong sản phẩm tẩy rửa thuần Việt</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/Content/clients/dist/img/Logo-HOLAME.webp" type="image/x-icon" />

    <!-- ✅ Preload fonts để tránh CLS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.gstatic.com/s/poppins/v15/pxiByp8kv8JHgFVrLDz8Z11lFc-K.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="https://fonts.gstatic.com/s/lora/v14/0QI6MX1D_JOuMw_LIftZ.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />


    <!-- ✅ Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700&display=swap" rel="stylesheet">

    <!-- ✅ CSS thư viện -->
    <link rel="stylesheet" href="~/Content/assets/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/animate.css">
    <link rel="stylesheet" href="~/Content/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/assets/css/aos.css">
    <link rel="stylesheet" href="~/Content/assets/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/assets/css/jquery.timepicker.css">
    <link rel="stylesheet" href="~/Content/assets/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/assets/css/icomoon.css">
    <link href="~/Content/assets/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- ✅ Main style nên để cuối cùng -->
    <link rel="stylesheet" href="~/Content/assets/css/style.css">

    <!-- ✅ jQuery Unobtrusive -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" ></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" ></script>
    @RenderSection("styles", required: false)

</head>


<body class="goto-here">
    <div class="py-1 bg-primary">
        <div class="container">
            <div class="row no-gutters d-flex align-items-start align-items-center px-md-0">
                <div class="col-lg-12 d-block">
                    <div class="row d-flex">
                        <div class="col-md pr-4 d-flex topper align-items-center">
                            <div class="icon mr-2 d-flex justify-content-center align-items-center"><span class="icon-phone2"></span></div>
                            <span class="text">096 441 15 82</span>
                        </div>
                        <div class="col-md pr-4 d-flex topper align-items-center">
                            <div class="icon mr-2 d-flex justify-content-center align-items-center"><span class="icon-paper-plane"></span></div>
                            <span class="text">contact@holameclean.com</span>
                        </div>
                        <div class="col-md-5 pr-4 d-flex topper align-items-center text-lg-right">
                            <span class="text">Miễn phí vận chuyển đơn hàng từ 500k</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/Content/clients/dist/img/Logo-HOLAME.webp" alt="Holame Clean" style="height: 60px;">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                @Html.Action("MenuTop", "Menu")
            </div>
        </div>
    </nav>
    <!-- END nav -->

    @RenderBody()
    
    <footer class="ftco-footer ftco-section" style="background-color: rgb(220, 255, 243); ">
        <div class="container">
            <div class="row">
                <div class="mouse  ftco-animate">
                    <a href="#" class="mouse-icon">
                        <div class="mouse-wheel"><span class="ion-ios-arrow-up"></span></div>
                    </a>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-md ftco-animate">
                    <div class="ftco-footer-widget mb-6">
                        <h1 class="ftco-heading-2" style="font-family: 'Times New Roman', Times, serif;">Holame&nbsp;Clean</h1>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">Tòa nhà Trần Phú, Dương Đình Nghệ, Cầu Giấy, Hà Nội</span></li>
                                <li><a href="#"><span class="icon icon-phone"></span><span class="text">096 441 15 82</span></a></li>
                                <li><a href="#"><span class="icon icon-envelope"></span><span class="text">contact@holameclean.com</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md ftco-animate">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2" style="font-family: 'Times New Roman', Times, serif; font-size: 28px;">Về Holame Clean</h2>
                        <ul class="list-unstyled">
                            <li><a href="#" class="py-2 d-block">Giới thiệu</a></li>
                            <li><a href="#" class="py-2 d-block">Liên hệ</a></li>
                            <li><a href="#" class="py-2 d-block">Chứng nhận</a></li>
                            <li><a href="#" class="py-2 d-block">Câu chuyện thương hiệu</a></li>
                            <li><a href="#" class="py-2 d-block">Tầm nhìn và sứ mệnh</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md ftco-animate">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2" style="font-family: 'Times New Roman', Times, serif; font-size: 28px;">Sản phẩm</h2>
                        @Html.Action("ProductCategoryHome", "Products")
                    </div>
                </div>
                <div class="col-md ftco-animate">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2" style="font-family: 'Times New Roman', Times, serif; font-size: 28px;">Chính sách</h2>
                        <ul class="list-unstyled" style="font-family: Verdana ">
                            <li><a href="#" class="py-2 d-block">Giao hàng &amp; thanh toán</a></li>
                            <li><a href="#" class="py-2 d-block">Đổi trả &amp; hoàn hàng</a></li>
                            <li><a href="#" class="py-2 d-block">Câu hỏi thường gặp</a></li>
                            <li><a href="#" class="py-2 d-block">Bảo mật thông tin</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mb-4 ftco-animate">
                <div class="col-auto text-center">
                    <img src="~/Content/clients/dist/img/Logo-HOLAME.webp" alt="Logo Holame Clean" style="max-width: 150px; height: auto;">
                    <h2 class="ftco-heading-2" style="font-family: 'Times New Roman', Times, serif; font-size: 28px;">Trách Nhiệm - Sáng Tạo - Chính Trực - Chất Lượng - Tận Tâm</h2>
                </div>
            </div>

        </div>
        <div class="floating-contact">
            <!-- Nút Gọi -->
            @Html.Raw("<a href='https://www.tiktok.com/@holameofficial' class='contact-icon call' title='Tiktok'><i class='fa-brands fa-tiktok'></i></a>")


            <!-- Nút Facebook -->
            <a href="https://www.facebook.com/holameclean" class="contact-icon messenger"
               title="Facebook">
                <i class="fab fa-facebook"></i>
            </a>

            <a href="https://s.shopee.vn/4L5kmIbW47"
               class="contact-icon location"
               title="Shopee"
               target="_blank">
                <img src="~/Content/assets/images/logo-shopee.png"
                     alt="Xem vị trí"
                     style="width: 50px; height: 50px;" />
            </a>


        </div>
    </footer>



    <!-- loader -->

    <!-- JS thư viện: defer giúp tránh block hiển thị -->
    <script src="~/Content/assets/js/jquery.min.js" defer></script>
    <script src="~/Content/assets/js/jquery-migrate-3.0.1.min.js" defer></script>
    <script src="~/Content/assets/js/popper.min.js" defer></script>
    <script src="~/Content/assets/js/bootstrap.min.js" defer></script>
    <script src="~/Content/assets/js/jquery.easing.1.3.js" defer></script>
    <script src="~/Content/assets/js/jquery.waypoints.min.js" defer></script>
    <script src="~/Content/assets/js/jquery.stellar.min.js" defer></script>
    <script src="~/Content/assets/js/owl.carousel.min.js" defer></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.min.js" defer></script>
    <script src="~/Content/assets/js/aos.js" defer></script>
    <script src="~/Content/assets/js/jquery.animateNumber.min.js" defer></script>
    <script src="~/Content/assets/js/bootstrap-datepicker.js" defer></script>
    <script src="~/Content/assets/js/scrollax.min.js" defer></script>
    <script src="~/Content/assets/js/google-map.js" defer></script>
    <script src="~/Content/assets/js/main.js" defer></script>

    <!-- Plugin thêm -->
    <script src="~/Content/assets/plugins/Isotope/isotope.pkgd.min.js" defer></script>
    <script src="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.js" defer></script>
    <script src="~/Content/assets/plugins/easing/easing.js" defer></script>
    <script src="~/Content/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.js" defer></script>
    <script src="~/Content/assets/js/custom.js" defer></script>

    <!-- Validate -->
    <script src="~/Scripts/jquery.validate.min.js" defer></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" defer></script>

    <script src="~/Content/assets/js/singlecustom.js" defer></script>
    @Scripts.Render("~/bundles/backend-js")

    @RenderSection("scripts", required: false)
</body>
</html>
